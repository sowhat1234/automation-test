# Facebook App Configuration
# Get these values from https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here

# Facebook Page Configuration
# Get the Page ID from your Facebook page settings
FACEBOOK_PAGE_ID=your_page_id_here

# Page Access Token
# Generate this from the Graph API Explorer or your app dashboard
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here

# API Configuration
FACEBOOK_API_VERSION=v18.0
FACEBOOK_API_BASE_URL=https://graph.facebook.com

# Application Settings
LOG_LEVEL=INFO
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1

# Queue and Scheduling
MAX_QUEUE_SIZE=1000
QUEUE_CHECK_INTERVAL=60
SCHEDULER_TIMEZONE=UTC

# Security Settings
ENCRYPT_TOKENS=true
TOKEN_ENCRYPTION_KEY=generate_your_own_32_byte_key_here

# Development Settings (Optional)
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_API_CALLS=false

# File Paths (Optional - defaults will be used if not specified)
CONFIG_DIR=config
MEDIA_DIR=media
LOGS_DIR=logs
QUEUE_FILE=config/posts_queue.json
SETTINGS_FILE=config/settings.json

# Notification Settings (Optional)
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=your_email@example.com

# Analytics (Optional)
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30
